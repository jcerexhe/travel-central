<p id="notice"><%= notice %></p>

<h1>Listing Album Images</h1>

<table>
  <thead>
    <tr>
      <th>File</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @album_images.each do |album_image| %>
      <tr>
        <td><%= album_image.file %></td>
        <td><%= album_image.album %></td>
        <td><%= link_to 'Show', album_image %></td>
        <td><%= link_to 'Edit', edit_album_image_path(album_image) %></td>
        <td><%= link_to 'Destroy', album_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

