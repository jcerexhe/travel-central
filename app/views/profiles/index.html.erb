<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Profiles</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Age</th>
        <th>Favourite places</th>
        <th>Occupation</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.first_name %></td>
          <td><%= profile.last_name %></td>
          <td><%= profile.age %></td>
          <td><%= profile.favourite_places %></td>
          <td><%= profile.occupation %></td>
          <td><%= link_to 'Show', profile %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>